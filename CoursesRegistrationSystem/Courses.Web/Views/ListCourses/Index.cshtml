@model double

@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/css")

<h3>
    Your current points are @Model
</h3>

<div id="courses-container">
    <h3>Available Courses</h3>
    <div id="available-courses-container">
        @Html.Action("GetAvailableCourses")
    </div>

    <div id="registered-courses-container">
        @Html.Action("GetRegisteredCourses")
    </div>
</div>

@Scripts.Render("~/Scripts/jquery-2.1.4.js")
@Scripts.Render("~/bundles/availableCoursesModule")